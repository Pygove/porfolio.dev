---
import NextJSIcon from '../components/icons/NextJS.astro'
import TailwindCSSIncon from '../components/icons/TailwindCSS.astro'
import ReactIcon from '../components/icons/React.astro'
import GitHubIcon from './icons/GitHub.astro'
import LinkIcon from './icons/Link.astro'
import LinkButton from './icons/LinkButton.astro'
import ViteIcon from './icons/Vite.astro'
import PythonIcon from './icons/Python.astro'
import VSCodeIcon from './icons/VSCode.astro'
import WordpressIcon from './icons/Wordpress.astro'
import CanvasIcon from './icons/Canvas.astro'

const TAGS = {
    NEXT:{    
    name: "Next.js",
    class: "bg-black text-white",
    icon: NextJSIcon,},

    TAILWIND:{    
    name: "Tailwind CSS",
    class: "bg-[#003159] text-white",
    icon: TailwindCSSIncon,},

    REACT:{    
    name: "React",
    class: "bg-black text-[white",
    icon: ReactIcon,},

    VITE:{    
    name: "Vite",
    class: "bg-black text-[white",
    icon: ViteIcon,},

    PYTHON:{    
    name: "Python",
    class: "bg-black text-[white",
    icon: PythonIcon,},

    VSCODE:{    
    name: "VSCode",
    class: "bg-black text-[white",
    icon: VSCodeIcon,},

    WORDPRESS:{    
    name: "Wordpress",
    class: "bg-black text-[white",
    icon: WordpressIcon,},

    CANVAS:{    
    name: "Canvas",
    class: "bg-black text-[white",
    icon: CanvasIcon,},

}

const PROJECTS = [
    {
        title : 'Venecitas',
        description : 'Sistema de gestión de clientes, productos y proveedores.',
        link : 'https://www.figma.com/proto/1Nv4eu5pE5hlpkzaXGphHR/Venecitas?node-id=517-11783&t=bhAiwkItmj7eIg92-0&scaling=min-zoom&content-scaling=fixed&page-id=16%3A1439&starting-point-node-id=25%3A1412',
        image : '/proyects/Venecitas_1.webp',
        tags : [TAGS.NEXT,TAGS.TAILWIND,TAGS.REACT],
        github : '',
    },
    {
        title : 'AgroSistema',
        description : 'Sistema web que permite al agricultor realizar un análisis de suelo utilizando datos estáticos almacenados en una base de datos y parámetros de entrada obtenidos de un sensor externo. Además, el sistema calcula la cantidad de fertilizante necesaria para aplicar al suelo después de la cosecha.',
        link : 'https://www.figma.com/proto/TKsTLS1Xpa0yjpVqFKXDkA/AgroSistema-Login?node-id=13-89&t=y9CmtXer1riXU3II-1',
        image : '/proyects/AgroSistema_1.webp',
        tags : [TAGS.VITE,TAGS.TAILWIND,TAGS.REACT],
        github : '',
    },
    {
        title : 'LCHEQ',
        description : 'Herramienta que facilita la generación de resultados representativos del comportamiento experimental de probetas sometidas a compresión. El proceso modela las tensiones, los desplazamientos y las grietas generadas durante la rotura de las mismas (actualmente en desarrollo), empleando el método de elementos finitos. ',
        link : '',
        image : '/proyects/LCHEQ_1.webp',
        tags : [TAGS.PYTHON,TAGS.VSCODE],
        github : 'https://github.com/Pygove/LCHEQ_Inv',
    },
    {
        title : 'Momentum',
        description : 'Emprendimiento de tarjetas digitales para bodas, cumpleaños, graduaciones, etc.',
        link : '',
        image : '/proyects/LCHEQ_1.webp',
        tags : [TAGS.WORDPRESS,TAGS.CANVAS],
        github : '',
    }
]

---

<div class="flex flex-col gap-y-16">
    {
      PROJECTS.map(({ image, title, description, tags, link, github }) => (
      <article class="flex flex-col space-x-0 space-y-8 group md:flex-row md:space-x-8 md:space-y-0">
    <div class="w-full md:w-1/2">
      <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl sm:rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700 lg:hover:bg-gray-800/50">
        <img alt="Sección para ingresar nuevos proveedores" class="object-cover object-top w-full h-56 transition duration-500 sm:h-full md:scale-110 md:group-hover:scale-105" loading="lazy" src={image} />
      </div>
    </div>
  
    <div class="w-full md:w-1/2 md:max-w-lg">
      <h3 class="text-2xl font-bold text-gray-800 dark:text-gray-100">
        {title}
      </h3>
      <div class="flex flex-wrap mt-2">
        <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
  
        <div class="mt-2 text-gray-700 dark:text-gray-400">{description}</div>
        <footer class="flex items-end justify-start mt-4 gap-x-4">
            {github && (
              <LinkButton href={github}>
                <GitHubIcon class="size-6" />
                Code
                
              </LinkButton>
            )}
            {link && (
              <LinkButton href={link}>
                <LinkIcon class="size-4" />
                Preview
              </LinkButton>
            )}
          </footer>
      </div>
    </div>
  </article>
      ))
    }
  </div>